<Window x:Class="chronos_screentime.Windows.ThemedMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chronos" MinHeight="150" MinWidth="350" MaxWidth="600"
        Background="#d0f3f9" WindowStartupLocation="CenterOwner"
        Icon="pack://application:,,,/icon.ico"
        ResizeMode="NoResize" ShowInTaskbar="False"
        SizeToContent="WidthAndHeight">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#005581" Padding="15">
            <TextBlock x:Name="TitleText" Text="Message" FontSize="16" FontWeight="Bold" 
                      Foreground="White" HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Content -->
        <StackPanel Grid.Row="1" Margin="30,20,30,20" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                <TextBlock x:Name="IconText" Text="ℹ️" FontSize="24" Margin="0,0,15,0" VerticalAlignment="Top"/>
                <TextBlock x:Name="MessageText" Text="Message content goes here" 
                          FontSize="14" Foreground="#005581" TextWrapping="Wrap" 
                          VerticalAlignment="Top" MinWidth="250" MaxWidth="500"
                          LineHeight="20"/>
            </StackPanel>
        </StackPanel>
        
        <!-- Buttons -->
        <Border Grid.Row="2" Background="#d0f3f9" Padding="20" BorderBrush="#d0f3f9" BorderThickness="0,1,0,0">
            <StackPanel x:Name="ButtonPanel" Orientation="Horizontal" HorizontalAlignment="Center">
                <!-- Buttons will be added dynamically -->
            </StackPanel>
        </Border>
    </Grid>
</Window> 