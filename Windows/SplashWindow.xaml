<Window x:Class="chronos_screentime.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Chronos Screen Time Tracker"
        Height="600" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Icon="pack://application:,,,/icon.ico">
    
    <Grid>
        <!-- Drop Shadow Effect -->
        <Border Background="{DynamicResource SolidBackgroundFillColorBaseBrush}" 
                CornerRadius="10"
                Margin="20">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                  Direction="270" 
                                  ShadowDepth="10" 
                                  BlurRadius="20" 
                                  Opacity="0.3"/>
            </Border.Effect>
            
            <!-- Main Content -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Splash Image -->
                <Image Grid.Row="0" 
                       Source="pack://application:,,,/assets/coverSloganCurved.png" 
                       Stretch="Uniform"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="20"/>
                
                <!-- Loading Indicator -->
                <StackPanel Grid.Row="1" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Bottom"
                           Margin="20,10,20,30">
                    
                    <!-- Loading Bar -->
                    <Border Background="{DynamicResource ControlFillColorDisabledBrush}" 
                           Height="4" 
                           Width="300" 
                           CornerRadius="2" 
                           Margin="0,0,0,15">
                        <Border x:Name="LoadingProgress" 
                               Background="{DynamicResource AccentFillColorDefaultBrush}" 
                               Height="4" 
                               Width="0"
                               HorizontalAlignment="Left"
                               CornerRadius="2"/>
                    </Border>
                    
                    <!-- Loading Text -->
                    <TextBlock Text="Loading Chronos..." 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                              HorizontalAlignment="Center"
                              Opacity="0.8"/>
                    
                    <!-- Version Text -->
                    <TextBlock Text="v1.1" 
                              FontSize="12" 
                              Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window> 